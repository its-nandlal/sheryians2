model Instructor {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  avatarUrl String?
  avatarFileId String?  // ImageKit file ID
  bio       String?
  expertise String[]
  
  courses   InstructorCourse[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("instructor")
}

model InstructorCourse {
  instructorId String
  courseId     String
  
  instructor Instructor @relation(fields: [instructorId], references: [id], onDelete: Cascade)
  course     Course     @relation(fields: [courseId], references: [id], onDelete: Cascade)
  
  @@id([instructorId, courseId])
  @@map("instructor_course")
}


model coupon {
  id              String   @id @default(cuid())
  code            String   @unique

  discountValue   Float

  minOrderAmount  Float    // minimum cart value
  // maxDiscount     Float?    // cap for percentage discount

  usageLimit      Int
  usedCount       Int?       @default(0)

  perUserLimit    Int

  order          Order[]

  startsAt        DateTime
  expiresAt       DateTime

  isActive        Boolean   @default(true)
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

}


model expairCoupon {
  id        String   @id @default(cuid())
  orderId   String
  couponId String
  studentId   String

  createdAt DateTime @default(now())

  @@unique([orderId, couponId])
}



// Order Schema - Add this to your existing schema
enum PaymentStatus {
  PENDING
  COMPLETED
  FAILED
  CANCELLED
  REFUNDED
}

model Order {
  id               String       @id @default(cuid())
  courseId         String
  course           Course       @relation(fields: [courseId], references: [id])
  userId           String
  user             User         @relation(fields: [userId], references: [id])
  amount           Float        // Final amount after discount
  originalAmount   Float        // Course original price
  discountAmount   Float?       // Discount applied
  couponId         String?
  coupon           coupon?      @relation(fields: [couponId], references: [id])
  razorpayOrderId  String       @unique
  razorpayPaymentId String? 
  razorpaySignature String?
  status           PaymentStatus @default(PENDING)
  currency         String       @default("INR")
  receipt          String       @unique
  
  // Customer details
  customerName     String?
  customerEmail    String?
  
  enrollment       Enrollment?  @relation("OrderEnrollment")
  
  createdAt        DateTime     @default(now())
  updatedAt        DateTime     @updatedAt

  @@map("orders")
}

// Enrollment relation update
model Enrollment {
  id         String   @id @default(cuid())
  enrolledAt DateTime @default(now())
  progress   Float    @default(0)
  completed  Boolean  @default(false)

  orderId    String?  @unique
  order      Order?   @relation("OrderEnrollment", fields: [orderId], references: [id])
  
  userId     String
  courseId   String
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  course     Course   @relation(fields: [courseId], references: [id], onDelete: Cascade)
  
  @@unique([userId, courseId])
  @@map("enrollment")
}
