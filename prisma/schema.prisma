
generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-3.0.x"]
  previewFeatures = []
}

datasource db {
  provider = "postgresql"
  // url      = env("DATABASE_URL")
}


// UserRole Enum - STUDENT multiple ho sakte hain, OWNER sirf ek
enum UserRole {
  STUDENT
  OWNER
}


enum Language {
  HINGLISH
  HINDI
  ENGLISH
}

enum CourseType {
  BOOTCAMP
  COHORT
  SELF_PACED
}

enum CourseStatus {
  UPCOMING
  LIVE
  COMPLETED
  ARCHIVED
}

enum ModuleType {
  VIDEO
  QUIZ
  ASSIGNMENT
  PROJECT
  LIVE_SESSION
}

enum CourseDuration {
  ONE_MONTH       // 40-60 hours (1 month part-time)
  THREE_MONTHS    // 120-180 hours (3 months part-time)
  SIX_MONTHS      // 240-360 hours (6 months part-time)
  NINE_MONTHS     // 360-540 hours (9 months part-time)
  ONE_YEAR        // 480-720 hours (12 months part-time)
}

enum CourseLevel {
  BEGINNER        // A1/A2 - No prior knowledge
  ELEMENTARY      // Basic understanding
  INTERMEDIATE    // B1 - Some practical experience
  ADVANCED        // B2/C1 - Strong practical skills
  EXPERT          // C2 - Professional mastery
}


enum CourseDays {
  MON_FRI
  MON_SAT
  WEEKENDS
}


model User {
  id            String    @id
  name          String
  email         String
  emailVerified Boolean   @default(false)
  image         String?
  role          UserRole  @default(STUDENT) // Default role STUDENT
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  sessions      Session[]
  accounts      Account[]
  enrollments   Enrollment[]
  order         Order[]

  @@unique([email])
  @@map("user")
}

model Session {
  id        String   @id
  expiresAt DateTime
  token     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  ipAddress String?
  userAgent String?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([token])
  @@index([userId])
  @@map("session")
}

model Account {
  id                    String    @id
  accountId             String
  providerId            String
  userId                String
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  @@index([userId])
  @@map("account")
}

model Verification {
  id         String   @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([identifier])
  @@map("verification")
}

// Course Models
model Course {
  id              String       @id @default(cuid())
  slug            String       @unique
  title           String
  subtitle        String?
  description     String?
  language        Language     @default(HINGLISH)
  type            CourseType
  status          CourseStatus @default(UPCOMING)
  price           Float
  discountedPrice Float?
  introVideoUrl   String?
  // introVideoFileId String?
  thumbnailUrl    String?
  thumbnailFileId String?
  bannerUrl       String?
  bannerFileId    String?
  tags            String[]
  startTime       String
  days            CourseDays?
  duration        CourseDuration     // "6 months"
  level           CourseLevel      // "Beginner/Advanced"
  
  // SEO
  metaTitle    String?
  metaDesc     String?
  metaKeywords String[]
  
  modules      Module[]
  enrollments  Enrollment[]
  instructors  InstructorCourse[]
  order        Order[]
   
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("course")
}

model Module {
  id           String     @id @default(cuid())
  title        String
  description  String?
  order        Int
  type         ModuleType
  duration     String?    // "2:30 hours"
  videoUrl     String?
  // quizUrl      String?
  // assignmentId String?
  
  courseId String
  course   Course @relation(fields: [courseId], references: [id], onDelete: Cascade)
  chapter  Chapter[]
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("module")
}


model Chapter {
  id          String   @id @default(cuid())
  title       String
  description String?
  // order       Int

  videoUrl    String?
  videoFileId String?
  duration    String?
  // isFree      Boolean  @default(false)

  moduleId String
  module   Module @relation(fields: [moduleId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("chapter")
}


